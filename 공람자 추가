 @Query("select a from ApprovalShare a "
            + "join ApprovalShareReaderView arv on a.approvalShareId = arv.approvalShare "
            + "where a.useYn = 'Y' and arv.useYn = 'Y' "
            + "and a.approvalLine = :approvalLineId and arv.readerUserId = :readerUserId")
    Optional<ApprovalShare> findApprovalShareByApprovalLineIdAndReaderUserId(
            @Param("approvalLineId") String approvalLineId,
            @Param("readerUserId") String readerUserId);



